{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-tailwindcss"
    ],
    "ignoreFiles": [
        "**/node_modules/**",
        ".next/**",
        "dist/**",
        "out/**",
        "public/**"
    ],
    "rules": {
        "at-rule-no-unknown": null,
        "no-descending-specificity": null,
        "selector-class-pattern": [
            "^(?:react-flow__[a-z0-9-]+|[a-z0-9]+(?:-[a-z0-9]+)*)$",
            {
                "message": "Class selectors should be kebab-case (or react-flow__* allowed)"
            }
        ],
        "keyframes-name-pattern": [
            "^[a-z0-9]+(?:-[a-z0-9]+)*$",
            {
                "message": "Keyframe names should be kebab-case"
            }
        ]
    },
    "overrides": [
        {
            "files": [
                "node_modules/react-flow/**",
                "src/pages/pipeline-showcase.css"
            ],
            "rules": {
                "selector-class-pattern": null,
                "keyframes-name-pattern": null
            }
        }
    ]
}